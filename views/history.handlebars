{{>headers}}
<hr>

<div class="container" style="margin-bottom: 50px">
  <h2>Daily Actions</h2>
  <div class="row">
    <form action="/stocks/updateQuantity" method="POST" class="col-md-4">
      <h4>Stock Sold</h4>


      <div class="form-group">
        <label for="Modelno">Model No.</label>
        <input class="form-control" type="text" name="Modelno" placeholder="Enter item's modelno" />
      </div>
      <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input class="form-control" type="text" name="Quantity" placeholder="Enter item's quantity" />
      </div>
      <div class="form-group">
        <label for="sellingprice">Selling price</label>
        <input class="form-control" type="text" name="Sellingprice" placeholder="Enter item's sellingprice" />
      </div>
      <div class="form-group">
        <label for="buyer">Buyer's Pan No.</label>
        <input class="form-control" type="text" name="buyerPannumber" placeholder="Enter Buyer's Pan Number" />
      </div>

      <input class="form-control1" type="submit" value="Sold Stock" />
    </form>

    <form action="/party/paymentMade" method="POST" class="col-md-4">
      <h4>Payment Made</h4>
      <div class="form-group">
        <label for="Supplier">Supplier Name</label>
        <input class="form-control" type="text" name="supplierName" placeholder="Enter Supplier Name" />
      </div>
      <div class="form-group">
        <label for="Amount">Amount</label>
        <input class="form-control" type="text" name="sAmount" placeholder="Enter Amount Paid" />
      </div>

      <div class="form-group">
        <label for="buyer">Supplier's Pan No.</label>
        <input class="form-control" type="text" name="supplierPanNumber" placeholder="Enter Supplier's Pan Number" />
      </div>

      <input class="form-control1" type="submit" value="Paid" />
    </form>

    <form action="/party/paymentReceived" method="POST" class="col-md-4">
      <h4>Payment Recived</h4>
      <div class="form-group">
        <label for="Buyer">Buyer Name</label>
        <input class="form-control" type="text " name="buyerName" placeholder="Enter Buyer Name" />
      </div>
      <div class="form-group">
        <label for="Amount">Amount</label>
        <input class="form-control" type="text" name="cAmount" placeholder="Enter Amount Received" />
      </div>
      <div class="form-group">
        <label for="buyer">Buyer's Pan No.</label>
        <input class="form-control" type="text" name="buyerPanNumber" placeholder="Enter Buyer's Pan Number" />
      </div>

      <input class="form-control1" type="submit" value="Received" />
    </form>
  </div>
</div>
<style>
  .container {
    background-color: lavenderblush;
    padding: 0px;

  }

  .form-control {
    text-decoration: none;
    background-color: rgba(0, 188, 188, 0.1);

  }

  .form-control1 {
    width: 100%;
    background-color: #4CAF50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }
</style>